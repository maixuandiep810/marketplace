@using marketplace.DTO.SystemManager.User
@using marketplace.DTO.Common;
@using marketplace.Utilities.Const
@model LoginDTO

@{
    ViewData["Title"] = "User Login Page";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";

    var apiResult = (ApiResult<UserDTO>)ViewData["ApiResult"];
}


<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        @if (apiResult != null)
        {
            <div class="card">
                <div class="card-body">
                    @foreach (var item in apiResult.Messages)
                    {
                        @item <br />
                    }
                </div>
            </div>
        }
        <!-- jquery validation -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"> Login Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form id="loginForm" asp-action="Login" asp-controller="User" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <label for="Email">Nhập email</label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="Password">Mật khẩu</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                    <div asp-for="RoleCookie" class="form-group">
                        <label>Đăng nhập với vai trò</label>
                        <select class="form-control">
                            <option value="@RoleConst.Group.User">Khách hàng</option>
                            <option value="@RoleConst.Group.Seller">Người bán</option>
                            <option value="@RoleConst.Group.Admin">Quản trị viên</option>
                        </select>
                    </div>
                    <div class="form-group mb-0">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" asp-for="RememberMe" class="custom-control-input">
                            <label class="custom-control-label" for="RememberMe">Giữ đăng nhập cho lần sau!</label>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
    <!--/.col (left) -->
    <!-- right column -->
    <div class="col-md-6">

    </div>
    <!--/.col (right) -->
</div>
<!-- /.row -->


@section RenderSectionScripts {
<script src="~/js/mp/User/ValidateLoginForm.js"></script>
}





