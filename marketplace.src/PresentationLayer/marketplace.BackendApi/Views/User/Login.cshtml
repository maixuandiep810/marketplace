@using marketplace.DTO.SystemManager.User
@using marketplace.DTO.Common;
@using marketplace.Utilities.Const
@model LoginDTO

@{
    Layout = "~/Views/Shared/MP/_Layout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}

@section ContentHeader {
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- jquery validation -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"> Login Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form id="loginForm">
                <div class="card-body">
                    <div class="form-group">
                        <label for="Email">Nhập email</label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="Password">Mật khẩu</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label>Đăng nhập với vai trò</label>
                        <select class="form-control" asp-for="RoleName">
                            <option value="@RoleConst.Buyer" selected>Người mua</option>
                            <option value="@RoleConst.Seller">Người bán</option>
                            <option value="@RoleConst.Admin">Quản trị viên</option>
                        </select>
                    </div>
                    <div class="form-group mb-0">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" asp-for="RememberMe" class="custom-control-input">
                            <label class="custom-control-label" for="RememberMe">Giữ đăng nhập cho lần sau!</label>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
            </form>
            <p id="loginFormResult" hidden="true">
                Đăng nhập thành công
            </p>
        </div>
        <!-- /.card -->
    </div>
    <!--/.col (left) -->
    <!-- right column -->
    <div class="col-md-6">

    </div>
    <!--/.col (right) -->
</div>
<!-- /.row -->


@section MPScripts {
<script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/plugins/jquery-validation/additional-methods.min.js"></script>
<script src="~/mp-frontend/js/LoginFormManager.js"></script>
}